{%- if section.settings.text != blank -%}
  <div class="announcement-bar color-{{ section.settings.color_scheme }}">
    <div class="announcement-bar__content page-width">
      {%- if section.settings.link != blank -%}
        <a href="{{ section.settings.link }}" class="announcement-bar__link">
      {%- endif -%}
      
      <p class="announcement-bar__text">{{ section.settings.text }}</p>
      
      {%- if section.settings.link != blank -%}
        </a>
      {%- endif -%}
    </div>
  </div>
{%- endif -%}

{% stylesheet %}
  .announcement-bar {
    background-color: var(--color-background);
    color: var(--color-foreground);
    padding: 12px 0;
    text-align: center;
    font-weight: 600;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .announcement-bar__content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .announcement-bar__link {
    color: inherit;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .announcement-bar__link:hover {
    opacity: 0.8;
  }

  .announcement-bar__text {
    margin: 0;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Announcement",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Announcement text",
      "default": "LIMITED OFFER! 20% OFF ON THE SECOND PRODUCT"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Announcement link"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-4"
    }
  ],
  "presets": [
    {
      "name": "Announcement"
    }
  ]
}
{% endschema %}

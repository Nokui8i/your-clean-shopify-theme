{% comment %}
  Marquee Section for Castle Theme
  Features: Scrolling text, customizable content, multiple marquee types
{% endcomment %}

<div class="marquee-section" data-marquee>
  <div class="marquee-container">
    <div class="marquee-content" data-marquee-content>
      {% for i in (1..20) %}
        <span class="marquee-item">{{ section.settings.marquee_text }}</span>
        <span class="marquee-separator">â€¢</span>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .marquee-section {
    background: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: 12px 0;
    overflow: hidden;
    position: relative;
    z-index: 10;
  }

  .marquee-container {
    width: 100%;
    overflow: hidden;
  }

  .marquee-content {
    display: flex;
    white-space: nowrap;
    animation: marquee {{ section.settings.scroll_speed }}s linear infinite;
  }

  .marquee-item {
    font-family: var(--castle-font-secondary);
    font-size: {{ section.settings.font_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 8px;
  }

  .marquee-separator {
    margin: 0 4px;
    opacity: 0.7;
  }

  @keyframes marquee {
    0% { transform: translateX(100%); }
    100% { transform: translateX(-100%); }
  }

  .marquee-section--outline .marquee-item {
    -webkit-text-stroke: 1px {{ section.settings.text_color }};
    color: transparent;
  }

  .marquee-section--gradient {
    background: linear-gradient(90deg, {{ section.settings.gradient_start }}, {{ section.settings.gradient_end }});
  }
</style>

<script>
  class MarqueeSection {
    constructor(element) {
      this.element = element;
      this.content = element.querySelector('[data-marquee-content]');
      this.init();
    }

    init() {
      // Clone content for seamless loop
      const clone = this.content.cloneNode(true);
      this.element.querySelector('.marquee-container').appendChild(clone);
    }
  }

  // Initialize all marquees
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('[data-marquee]').forEach(marquee => {
      new MarqueeSection(marquee);
    });
  });
</script>

{% schema %}
{
  "name": "Marquee Text",
  "settings": [
    {
      "type": "text",
      "id": "marquee_text",
      "label": "Marquee Text",
      "default": "ROYAL"
    },
    {
      "type": "select",
      "id": "marquee_style",
      "label": "Marquee Style",
      "options": [
        {
          "value": "solid",
          "label": "Solid Background"
        },
        {
          "value": "gradient",
          "label": "Gradient Background"
        },
        {
          "value": "outline",
          "label": "Outline Text"
        }
      ],
      "default": "solid"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#2c2c2c"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "gradient_start",
      "label": "Gradient Start Color",
      "default": "#87CEEB"
    },
    {
      "type": "color",
      "id": "gradient_end",
      "label": "Gradient End Color",
      "default": "#F0E68C"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "label": "Scroll Speed (seconds)",
      "min": 10,
      "max": 60,
      "step": 5,
      "default": 30
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size (px)",
      "min": 12,
      "max": 24,
      "step": 2,
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Marquee Text"
    }
  ]
}
{% endschema %}

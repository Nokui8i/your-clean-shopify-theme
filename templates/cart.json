{
  "sections": {
    "cart_header": {
      "type": "section",
      "blocks": {
        "cart_title": {
          "type": "text",
          "settings": {
            "text": "<h1>Shopping Cart</h1>",
            "alignment": "center",
            "type_preset": "h1",
            "case": "uppercase"
          }
        }
      },
      "block_order": ["cart_title"],
      "settings": {
        "content_direction": "column",
        "horizontal_alignment": "center",
        "gap": 20,
        "color_scheme": "scheme-1",
        "padding-block-start": 60,
        "padding-block-end": 40
      }
    },
    "cart_content": {
      "type": "main-cart",
      "blocks": {
        "cart_items": {
          "type": "_cart-products",
          "settings": {
            "show_vendor": false,
            "show_quantity_selector": true,
            "show_remove_button": true,
            "color_scheme": "scheme-1"
          }
        },
        "cart_summary": {
          "type": "_cart-summary",
          "settings": {
            "show_cart_note": true,
            "show_tax_info": true,
            "show_shipping_calculator": false,
            "color_scheme": "scheme-2"
          }
        }
      },
      "block_order": ["cart_items", "cart_summary"],
      "settings": {
        "content_direction": "row",
        "vertical_on_mobile": true,
        "horizontal_alignment": "space-between",
        "gap": 60,
        "color_scheme": "scheme-1",
        "padding-block-start": 40,
        "padding-block-end": 80
      }
    }
  },
  "order": [
    "cart_header",
    "cart_content"
  ]
}
{
  "sections": {
    "announcement_bar": {
      "type": "header-announcements",
      "blocks": {
        "announcement_1": {
          "type": "announcement",
          "settings": {
            "text": "LIMITED OFFER! 20% OFF ON THE SECOND PRODUCT",
            "link": ""
          }
        }
      },
      "block_order": ["announcement_1"],
      "settings": {
        "color_scheme": "scheme-4",
        "section_width": "full-width",
        "divider_width": 0,
        "padding-block-start": 0,
        "padding-block-end": 0
      }
    },
    "hero_section": {
      "type": "hero",
      "blocks": {
        "hero_content": {
          "type": "group",
          "settings": {
            "content_direction": "column",
            "vertical_on_mobile": true,
            "horizontal_alignment": "center",
            "vertical_alignment": "center",
            "gap": 24,
            "width": "custom",
            "custom_width": 50,
            "color_scheme": ""
          },
          "blocks": {
            "hero_title": {
              "type": "text",
              "settings": {
                "text": "<h1>ANIME INSPIRED STREETWEAR</h1>",
                "width": "100%",
                "alignment": "center",
                "type_preset": "h1",
                "font_size": "3.5rem",
                "case": "uppercase",
                "color": ""
              }
            },
            "hero_subtitle": {
              "type": "text",
              "settings": {
                "text": "<p>Premium quality clothing inspired by your favorite anime characters</p>",
                "width": "100%",
                "alignment": "center",
                "type_preset": "h3",
                "font_size": "1.5rem",
                "case": "none",
                "color": ""
              }
            },
            "hero_button": {
              "type": "button",
              "settings": {
                "label": "SHOP NOW",
                "link": "shopify://collections/all",
                "style_class": "button--primary",
                "width": "fit-content"
              }
            }
          },
          "block_order": ["hero_title", "hero_subtitle", "hero_button"]
        }
      },
      "block_order": ["hero_content"],
      "settings": {
        "media_type_1": "image",
        "content_direction": "column",
        "vertical_on_mobile": true,
        "horizontal_alignment": "center",
        "vertical_alignment": "center",
        "gap": 32,
        "section_width": "full-width",
        "section_height": "large",
        "color_scheme": "scheme-5",
        "padding-block-start": 80,
        "padding-block-end": 80
      }
    },
    "featured_collections": {
      "type": "collection-list",
      "blocks": {
        "header_group": {
          "type": "group",
          "settings": {
            "content_direction": "column",
            "horizontal_alignment": "center",
            "gap": 16,
            "width": "fill"
          },
          "blocks": {
            "heading": {
              "type": "text",
              "settings": {
                "text": "<h2>COLLECTIONS</h2>",
                "alignment": "center",
                "type_preset": "h2",
                "case": "uppercase"
              }
            }
          },
          "block_order": ["heading"]
        }
      },
      "block_order": ["header_group"],
      "settings": {
        "collection_list": [],
        "layout_type": "grid",
        "columns": 4,
        "mobile_columns": "2",
        "columns_gap": 16,
        "rows_gap": 16,
        "section_width": "page-width",
        "gap": 32,
        "color_scheme": "scheme-1",
        "padding-block-start": 80,
        "padding-block-end": 80
      }
    },
    "hot_products": {
      "type": "product-list",
      "blocks": {
        "product_header": {
          "type": "_product-list-content",
          "settings": {
            "content_direction": "column",
            "horizontal_alignment": "center",
            "gap": 16
          },
          "blocks": {
            "title": {
              "type": "text",
              "settings": {
                "text": "<h2>HOT NOW</h2>",
                "alignment": "center",
                "type_preset": "h2",
                "case": "uppercase"
              }
            }
          },
          "block_order": ["title"]
        }
      },
      "block_order": ["product_header"],
      "settings": {
        "collection": "all",
        "layout_type": "grid",
        "max_products": 8,
        "columns": 4,
        "mobile_columns": "2",
        "color_scheme": "scheme-2",
        "padding-block-start": 80,
        "padding-block-end": 80
      }
    },
    "newsletter_signup": {
      "type": "email-signup",
      "settings": {
        "heading": "JOIN OUR FAMILY!",
        "subtext": "Sign up to our newsletter and receive special discount on your first order.",
        "width": "custom",
        "custom_width": 50,
        "color_scheme": "scheme-3",
        "padding-block-start": 80,
        "padding-block-end": 80
      }
    }
  },
  "order": [
    "announcement_bar",
    "hero_section",
    "featured_collections",
    "hot_products",
    "newsletter_signup"
  ]
}
{
  "sections": {
    "product_media": {
      "type": "product-media-gallery",
      "settings": {
        "image_ratio": "square",
        "enable_zoom": true,
        "enable_video_looping": true,
        "color_scheme": "scheme-1",
        "padding-block-start": 40,
        "padding-block-end": 40
      }
    },
    "product_info": {
      "type": "product-information",
      "blocks": {
        "product_title": {
          "type": "product-title",
          "settings": {
            "type_preset": "h1",
            "case": "uppercase"
          }
        },
        "product_price": {
          "type": "product-price",
          "settings": {
            "show_sale_price_first": true,
            "show_installments": false,
            "show_tax_info": false
          }
        },
        "product_description": {
          "type": "product-description",
          "settings": {
            "type_preset": "paragraph"
          }
        },
        "variant_picker": {
          "type": "variant-picker",
          "settings": {
            "picker_type": "button",
            "color_picker_type": "swatch"
          }
        },
        "quantity_selector": {
          "type": "quantity",
          "settings": {
            "show_label": true
          }
        },
        "buy_buttons": {
          "type": "buy-buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient_form": false
          }
        },
        "product_inventory": {
          "type": "product-inventory",
          "settings": {
            "show_quantity_in_message": true
          }
        }
      },
      "block_order": [
        "product_title",
        "product_price",
        "product_description",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "product_inventory"
      ],
      "settings": {
        "color_scheme": "scheme-1",
        "padding-block-start": 40,
        "padding-block-end": 40
      }
    },
    "product_recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "You may also like",
        "heading_alignment": "center",
        "columns_desktop": 4,
        "columns_mobile": "2",
        "color_scheme": "scheme-2",
        "padding-block-start": 80,
        "padding-block-end": 80"
      }
    }
  },
  "order": [
    "product_media",
    "product_info",
    "product_recommendations"
  ]
}